
@{
    ViewBag.Title = "Index";
}

@model List<ProductPropVM>

<h4>Product Index</h4>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ProductID</th>
                        <th>ProductName</th>
                        <th>UnitPrice</th>
                        <th>UnitInStock</th>
                        <th>CategoryName</th>
                        <th>CompanyName</th>
                        <th>Update</th>
                        <th>Delete</th>
                        <th>@Html.ActionLink("Add Product", "Add", "Product", null, new { @class = "btn btn-success" })</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.UnitInStock</td>
                            <td>@item.CategoryName</td>
                            <td>@item.CompanyName</td>
                            <td>@Html.ActionLink("Update", "Update", "Product", new { productID = item.ProductID }, new { @class = "btn btn-warning" })</td>
                            <td><a href="/Product/Delete?productID=@item.ProductID" class="btn btn-danger">Delete</a></td>
                         
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



