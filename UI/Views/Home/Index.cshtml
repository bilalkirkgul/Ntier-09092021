
@{
    ViewBag.Title = "Index";
}

@model ProductVM

<div class="container">
    <div class="row">

        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ProductName</th>
                        <th>UnitPrice</th>
                        <th>UnitInStock</th>
                        <th>CategoryName</th>
                        <th>CompanyName</th>
                        <th>Update</th>
                        <th>Delete</th>
                        <th>@Html.ActionLink("Add Product","Add","Home",null,new {@class="btn btn-success" })</th>

                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model.Products)
            {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.UnitInStock</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.Supplier.CompanyName</td>
                        <td>@Html.ActionLink("Update","Update","Home",new { productID=item.ProductID },new {@class="btn btn-warning" })</td>
                        <td>@Html.ActionLink("Delete","Delete",new { productID=item.ProductID},new {@class="btn btn-danger" })</td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>

